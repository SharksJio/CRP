# Environment Variables Configuration

# Copy this file to .env and update with your actual values

# ============================================
# Application
# ============================================
NODE_ENV=development
APP_NAME=CRP PreSchool Management
APP_VERSION=1.0.0

# ============================================
# Server Configuration
# ============================================
API_PORT=3000
API_HOST=localhost
API_BASE_URL=http://localhost:3000

# ============================================
# Database Configuration
# ============================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=crp_preschool
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/crp_preschool

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=1h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_REFRESH_EXPIRY=7d

# ============================================
# Firebase Configuration
# ============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-admin@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=your-private-key
FCM_SERVER_KEY=your-fcm-server-key

# ============================================
# Email Configuration (SendGrid)
# ============================================
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@crpschool.com
SENDGRID_FROM_NAME=CRP PreSchool

# ============================================
# Alternative Email (AWS SES)
# ============================================
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your_aws_access_key
AWS_SES_SECRET_ACCESS_KEY=your_aws_secret_key

# ============================================
# SMS Configuration (Twilio)
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# Media Storage (Cloudinary)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# Alternative Storage (AWS S3)
# ============================================
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET=crp-preschool-media
AWS_S3_ACCESS_KEY_ID=your_aws_access_key
AWS_S3_SECRET_ACCESS_KEY=your_aws_secret_key

# ============================================
# Payment Gateway - Stripe
# ============================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=USD

# ============================================
# Payment Gateway - Razorpay (India)
# ============================================
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn

# ============================================
# Mobile App Configuration
# ============================================
MOBILE_API_BASE_URL=http://localhost:3000/api/v1
MOBILE_API_TIMEOUT=30000

# ============================================
# Security
# ============================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key
ENCRYPTION_KEY=your_32_character_encryption_key

# ============================================
# Feature Flags
# ============================================
ENABLE_REGISTRATION=true
ENABLE_PAYMENT_GATEWAY=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# ============================================
# Development Tools
# ============================================
SWAGGER_ENABLED=true
DEBUG_MODE=true
